{% block flash_messages %}
    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="alert alert-{{ type }}">
                <button type="button" class="close" aria-hidden="true"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                {{ message | raw }}
            </div>
        {% endfor %}
    {% endfor %}
{% endblock %}


<script src="{{ asset('apps/web/js/jquery-3.4.1.min.js') }}" type="text/javascript">

    document.getElementById('alert').addEventListener('click', function(e) {
        e.preventDefault();
        this.parentNode.style.display = 'none';
    }, false);
</script>

